CXX = clang++
CXX_STD = CXX11
PKG_CPPFLAGS = -I../inst/include -lhts -Lhtslib/
PKG_LIBS= -lhts -Lhtslib/ -lz -lm
.PHONY: htslib all

all: $(SHLIB)

$(SHLIB): htslib

htslib:
	(cd htslib; $(MAKE) lib-static CC="$(CC)" CFLAGS="$(CFLAGS) $(CPICFLAGS)" AR="$(AR)" RANLIB="$(RANLIB)"; $(MAKE) mostlyclean ; cd ..)
